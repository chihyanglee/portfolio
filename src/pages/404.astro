---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>404 — Page Not Found</title>
    <meta name="robots" content="noindex" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <script is:inline>
      (function () {
        var stored = localStorage.getItem("theme");
        if (stored === "light") {
          document.documentElement.classList.remove("dark");
        } else if (stored === "dark") {
          document.documentElement.classList.add("dark");
        } else if (!window.matchMedia("(prefers-color-scheme: dark)").matches) {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="m-0 bg-slate-100 text-slate-600 dark:bg-slate-900 dark:text-slate-400 antialiased">
    <div class="flex min-h-screen flex-col items-center justify-center px-6 py-12 text-center">
      <!-- 404 number with decorative line -->
      <div class="flex items-center justify-center gap-6">
        <span class="h-px w-8 bg-teal-500 dark:bg-teal-400 sm:w-16"></span>
        <h1 class="text-8xl font-bold tracking-tighter text-slate-900 dark:text-slate-100 sm:text-[10rem] sm:leading-none">
          404
        </h1>
        <span class="h-px w-8 bg-teal-500 dark:bg-teal-400 sm:w-16"></span>
      </div>

      <!-- Bilingual message -->
      <div class="mt-6 space-y-1 text-center sm:mt-8">
        <p class="text-base text-slate-500 dark:text-slate-400 sm:text-lg">
          The page you're looking for doesn't exist.
        </p>
        <p class="text-base text-slate-500 dark:text-slate-400 sm:text-lg">
          您所尋找的頁面不存在。
        </p>
      </div>

      <!-- Back-home links styled like the main site's nav -->
      <div class="mt-10 flex flex-col items-center justify-center gap-3 sm:mt-12 sm:flex-row sm:gap-6">
        <a
          href="/"
          class="group inline-flex items-center text-sm font-bold uppercase tracking-widest text-slate-500 hover:text-slate-800 dark:hover:text-slate-200"
        >
          <span class="mr-3 h-px w-8 bg-slate-400 transition-all group-hover:w-12 group-hover:bg-teal-500 dark:group-hover:bg-teal-400"></span>
          Back to Home
        </a>
        <a
          href="/zh/"
          class="group inline-flex items-center text-sm font-bold uppercase tracking-widest text-slate-500 hover:text-slate-800 dark:hover:text-slate-200"
        >
          <span class="mr-3 h-px w-8 bg-slate-400 transition-all group-hover:w-12 group-hover:bg-teal-500 dark:group-hover:bg-teal-400"></span>
          回到首頁
        </a>
      </div>
    </div>
  </body>
</html>
