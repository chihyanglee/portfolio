---
interface Props {
  dates: string;
  company: string;
  title: string;
  description: string;
  skills: string[];
}

const { dates, company, title, description, skills } = Astro.props;
---

<li class="group relative grid pb-1 sm:grid-cols-8 sm:gap-8 md:gap-4 transition-all lg:hover:!opacity-100 lg:group-hover/list:opacity-50">
  <div class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition-all motion-reduce:transition-none lg:block lg:group-hover:bg-slate-200/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg dark:lg:group-hover:bg-slate-800/50" />
  <header class="z-10 mt-1 mb-2 text-xs font-semibold uppercase tracking-wide text-slate-500 sm:col-span-2" aria-label={dates}>
    {dates}
  </header>
  <div class="z-10 sm:col-span-6">
    <h3 class="font-medium leading-snug text-slate-800 dark:text-slate-200">
      {title}
    </h3>
    <p class="text-sm text-slate-500 dark:text-slate-400">{company}</p>
    <p class="mt-2 text-sm leading-normal">{description}</p>
    <ul class="mt-2 flex flex-wrap" aria-label="Technologies used">
      {skills.map((skill) => (
        <li class="mr-1.5 mt-2">
          <span class="flex items-center rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-500 dark:text-teal-300">
            {skill}
          </span>
        </li>
      ))}
    </ul>
  </div>
</li>
