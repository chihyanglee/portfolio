---
import type { Lang } from "../i18n";
import { t, getLocalePath, getAlternateLang } from "../i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const altLang = getAlternateLang(lang);
const altPath = getLocalePath(altLang);

const navItems = [
  { id: "about", label: t("nav.about", lang) },
  { id: "experience", label: t("nav.experience", lang) },
  { id: "projects", label: t("nav.projects", lang) },
  { id: "writing", label: t("nav.writing", lang) },
];
---

<header class="lg:sticky lg:top-0 lg:flex lg:h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24">
  <div>
    <h1 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-slate-100 sm:text-5xl">
      <a href={getLocalePath(lang)}>{t("name", lang)}</a>
    </h1>
    <h2 class="mt-3 text-lg font-medium tracking-tight text-slate-700 dark:text-slate-200 sm:text-xl">
      {t("title", lang)}
    </h2>
    <p class="mt-4 max-w-xs leading-normal text-slate-500 dark:text-slate-400">
      {t("tagline", lang)}
    </p>

    <nav class="mt-16 hidden lg:block" aria-label="In-page navigation">
      <ul class="w-max">
        {navItems.map((item) => (
          <li>
            <a
              href={`#${item.id}`}
              data-section={item.id}
              class="group flex items-center py-3 text-xs font-bold uppercase tracking-widest text-slate-500 hover:text-slate-800 dark:hover:text-slate-200"
            >
              <span class="mr-4 h-px w-8 bg-slate-400 transition-all group-hover:w-16 group-hover:bg-slate-800 dark:group-hover:bg-slate-200 group-[[data-active]]:w-16 group-[[data-active]]:bg-slate-800 dark:group-[[data-active]]:bg-slate-200" />
              <span class="group-[[data-active]]:text-slate-800 dark:group-[[data-active]]:text-slate-200">
                {item.label}
              </span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <div>
    <div class="mt-8 flex items-center gap-4">
      <!-- Language switch -->
      <a
        href={altPath}
        class="text-sm font-medium text-slate-500 hover:text-slate-800 dark:hover:text-slate-200 transition-colors"
        aria-label={t("lang.switchLabel", lang)}
      >
        {t("lang.switch", lang)}
      </a>

      <!-- Theme toggle -->
      <button
        id="theme-toggle"
        type="button"
        class="text-slate-500 hover:text-slate-800 dark:hover:text-slate-200 transition-colors"
        aria-label="Toggle dark mode"
      >
        <!-- Sun icon (shown in dark mode) -->
        <svg class="hidden dark:block h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg class="block dark:hidden h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
      </button>
    </div>

    <!-- Social links -->
    <ul class="mt-8 flex items-center gap-5" aria-label="Social links">
      <li>
        <a
          href="https://github.com/chihyanglee"
          target="_blank"
          rel="noopener noreferrer"
          class="block text-slate-500 hover:text-slate-800 dark:hover:text-slate-200 transition-colors"
          aria-label="GitHub"
        >
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
      <li>
        <a
          href="https://www.linkedin.com/in/chihyanglee/"
          target="_blank"
          rel="noopener noreferrer"
          class="block text-slate-500 hover:text-slate-800 dark:hover:text-slate-200 transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
        </a>
      </li>
      <li>
        <a
          href="mailto:chihyanglee@gmail.com"
          class="block text-slate-500 hover:text-slate-800 dark:hover:text-slate-200 transition-colors"
          aria-label="Email"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
        </a>
      </li>
    </ul>
  </div>
</header>
